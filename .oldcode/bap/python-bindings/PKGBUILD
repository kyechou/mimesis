pkgname=python-bap
pkgver=1.3.1
pkgrel=1
pkgdesc='BAP python bindings'
depends=('python')
makedepends=('python-setuptools')
arch=('x86_64')
url='https://github.com/BinaryAnalysisPlatform/bap-python'
license=('MIT')
source=("https://github.com/BinaryAnalysisPlatform/bap-python/archive/${pkgver}.tar.gz")
sha512sums=('e10e385d5554dab458cef3280a975602325e1c206f1df5a53702851f460776fa3961d005ebc53afee67536210fabe669eb454d0dc9e824e6f8aa1fa6b67ed5f7')

build() {
    cd "$srcdir/bap-python-$pkgver"
    python setup.py build
}

package() {
    cd "$srcdir/bap-python-$pkgver"
    python setup.py install --root="$pkgdir/" --optimize=1 --skip-build
}
